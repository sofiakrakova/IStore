@model RegistrationViewModel
@{
  ViewData["Title"] = "Registration";
}

<div class="col-md-6 offset-md-3 border rounded bg-light">
  <h2 class="form-text text-center">Welcome to IStore</h2>
  <form asp-action="Register">
    <div class="form-group">
      <label for="credentialsInput">Full Name *</label>
      <input id="credentialsInput" class="form-control" asp-for="Credentials" required>
    </div>
    <div class="form-group">
      <label for="emailInput">Email address *</label>
      <input id="emailInput" class="form-control" asp-for="Email" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputPassword">Password *</label>
        <input id="inputPassword" class="form-control" asp-for="Password" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword">Confirm Password *</label>
        <input for="inputPasswordConfirm" class="form-control" asp-for="PasswordConfirmation" required>
      </div>
    </div>
    <div class="form-group">
      <label for="aboutInput">About</label>
      <textarea id="aboutInput" class="form-control" asp-for="About" aria-describedby="aboutInputHelp"></textarea>
      <small id="aboutInputHelp" class="form-text text-muted">
        Write a short bio if you wish
      </small>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create account</button>
    </div>
  </form>
</div>
