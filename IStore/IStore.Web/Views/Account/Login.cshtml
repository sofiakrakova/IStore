@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}



<div class="col-md-6 offset-md-3 border rounded bg-light">
    <h2 class="form-text text-center">Log In</h2>
    <form asp-action="Login">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group row">
            <label for="emailInput" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input id="emailInput" class="form-control" asp-for="Email" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input id="inputPassword" class="form-control" asp-for="Password" required>
            </div>
        </div>
        <div class="form-group form-check">
            <input id="rememberMeCheck" type="checkbox" class="form-check-input" asp-for="RememberMe">
            <label for="rememberMeCheck" class="form-check-label">Remember me</label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" aria-describedby="submitHelp"><i class="fa fa-check" aria-hidden="true"></i></button>
            <small id="submitHelp" class="form-text text-muted text-center">
                New to IStore? <a href="Register">Create a new account</a>
            </small>
        </div>
    </form>
</div>
